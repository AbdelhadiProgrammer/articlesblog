<h1 style="color:#ff7142;">Articles Home Page</h1>
<i><h5>This My RubyOnRails app it's a basic blog !</h5></i>
<%@article.each do |a|%>
<h2><%= link_to a.title, article_path(a) %></h2>
<p style="color:#333;"><%= a.text  %></p>
Created at :<%= a.created_at %> | 
<%= link_to "delete",article_path(a), method: :delete,data: {confirm: 'Are you sure?'}%> 
| <%=link_to "edit" ,edit_article_path(a)%> 
<hr />
<%end%>
<br /><i><%= link_to "new article", new_article_path%></i>


