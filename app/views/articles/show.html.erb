<h2>Article : <%= @article.title %></h2> 
<p style="color:#333;"><%= @article.text%></p>
<br><br><br><br><br>
<h2 class="c">Comments:</h2>
<%@article.comments.each do |c|%>

<strong><i><%= c.commenter%> : </i></strong><br>
<p><div class="comment"><i><%= c.body%></i><br><%=link_to "delete this comment" ,[c.article, c], method: :delete%></div></p>
<%end%>
<h3 class="c">Add a comment:</h3>
<%= form_for([@article,@article.comments.build]) do |f|%>
<p>
	<%= f.label :commenter%><br>
	<%= f.text_field :commenter,class: "c_field"%>
</p>
<p>
	<%= f.label :body%><br>
	<%= f.text_area :body, class: "c_area"%>
</p>
<p>
	<%= f.submit%>
</p>
<% end %>
<%= link_to 'Back', articles_path %>
